<!--使用哪一个样式，哪一个样式打开-->
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    <!--Servlet 全类名-->
    <servlet>
      <!-- servlet的名称，名字任意 和@WebServlet("/xmlServlet")中/后面的对应-->
      <servlet-name>xmlServlet</servlet-name>
      <!--servlet的类全名  @WebServlet("/xmlServlet")对应类的全类名-->
      <servlet-class>com.wang.webservlet.XmlServlet</servlet-class>
    </servlet>


    <!--
        Servlet 访问路径
    -->

    <servlet-mapping>
      <!-- servlet的名称，要和上面的名称一致-->
      <!-- servlet的名称，要和上面的<servlet>中的<servlet-name>的名字一样-->
      <servlet-name>xmlServlet</servlet-name>
      <!-- servlet的访问路径 和@WebServlet("/xmlServlet")对应 -->
      <url-pattern>/xmlServlet</url-pattern>
    </servlet-mapping>
</web-app>


